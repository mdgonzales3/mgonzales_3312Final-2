@page
@model mgonzales_3312Final_2_1.Pages.Restaurants.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Restaurant</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Restaurant.RestaurantID" />
            <div class="form-group">
                <label asp-for="Restaurant.RestaurantName" class="control-label"></label>
                <input asp-for="Restaurant.RestaurantName" class="form-control" />
                <span asp-validation-for="Restaurant.RestaurantName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Restaurant.Location" class="control-label"></label>
                <input asp-for="Restaurant.Location" class="form-control" />
                <span asp-validation-for="Restaurant.Location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Restaurant.Price" class="control-label"></label>
                <input asp-for="Restaurant.Price" class="form-control" />
                <span asp-validation-for="Restaurant.Price" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Restaurant.Tossed" /> @Html.DisplayNameFor(model => model.Restaurant.Tossed)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Restaurant.Rating" class="control-label"></label>
                <input asp-for="Restaurant.Rating" class="form-control" />
                <span asp-validation-for="Restaurant.Rating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
